<view class="container">
  <view class="zan-panel-title">关于我</view>
  <view class="zan-panel">
    <view class='zan-font-14' style="padding: 15px;">
      <text>
{{author.title}}
      </text>
    </view>
  </view>

  <view class="zan-panel-title">联系我</view>
  <view class="zan-panel">
    <view class="zan-cell">
      <view>邮箱：</view>
      <view class='zan-text-underline zan-c-blue' data-index='{{author.mailbox}}' bindtap="copyDataTap">{{author.mailbox}}</view>
    </view>
    <view class="zan-cell">
      <view>微信公众号：</view>
      <view class='zan-text-underline zan-c-blue ' bindtap="copyDataTap" data-index='{{author.publicNumber}}'>{{author.publicNumber}}</view>
    </view>
    <view class="zan-cell">
      <view>github：</view>
      <view class='zan-text-underline zan-c-blue ' bindtap="copyDataTap" data-index='{{author.gitHub}}'>{{author.gitHub}}</view>
    </view>
    <view class="zan-cell">
      <view>博客园：</view>
      <view class='zan-text-underline zan-c-blue ' bindtap="copyDataTap" data-index='{{author.blogGarden}}'>{{author.blogGarden}}</view>
    </view>
  </view>
</view>